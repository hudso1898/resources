<h1>Journal Entries</h1>

<%= link_to 'New Entry', new_journal_path, class: 'btn btn-primary' %>
<%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
<div>
<% @journals.each do |journal| %>
	<hr>
	<p>Entry <%= journal.id %> on <%= journal.date %></p>
	<h3><%= journal.title %></h3>
	<p><%= journal.content %></p>
	<div class='btn-group'>
	<%= link_to 'View', journal_path(journal), class: 'btn btn-primary'%>
	<%= link_to 'Edit', edit_journal_path(journal), class: 'btn btn-warning'%>
	<%= link_to 'Delete', journal_path(journal), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this entry?' } %>
	</div>
<% end %>
<hr>
</div>
