<%= form_for :journal, url: url, model: @journal, method: method do |f| %>
	<% if @journal and @journal.errors.any? %>
		<div class="alert alert-danger">
                <h2>
                        <%= pluralize(@journal.errors.count, "error") %> need to be resolved:
                </h2>
                <div>
                        <% @journal.errors.full_messages.each do |message| %>
                        <p><%= message %></p>
                        <% end %>
		</div>
		</div>
        <% end %>
        <p>
                <%= f.label :title %><br>
                <%= f.text_field :title %>
        </p>
        <p>
                <%= f.label :date %><br>
                <%= f.text_field :date %>
        </p>
        <p>
                <%= f.label :content %><br>
                <%= f.text_area :content %>
        </p>
        <p>
                <%= f.submit %>
        </p>
<% end %>
